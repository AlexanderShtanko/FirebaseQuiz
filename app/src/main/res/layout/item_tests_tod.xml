<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_test_of_day"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView android:src="@drawable/tree_bg"
            android:id="@+id/image" android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_overlay" />

        <TextView
            android:id="@+id/text_tod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" android:textColor="@color/white"
            android:padding="10dp"
            android:text="Тест дня" android:textStyle="bold"
            android:textSize="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textColor="@color/white"
            android:layout_below="@id/text_tod"
            android:gravity="center_horizontal"
            android:padding="10dp" android:id="@+id/name"
            android:text="Название теста"
            android:textSize="22dp" />

    </RelativeLayout>